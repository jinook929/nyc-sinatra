<h2>Edit Historical Landmark</h2>

<!-- add content here -->
<form action="/landmarks/<%= @landmark.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <h3>
    <label for="name">Landmark Name : </label>
    <input type="text" name="landmark[name]" id="name" value="<%= @landmark.name %>">
  </h3>
  <h4>
    <label for="year_completed">Year Completed : </label>
    <input type="number" name="landmark[year_completed]" id="year_completed" value="<%= @landmark.year_completed %>"">
  </h4>
  <p>
    <h3>Related Figure</h3>
    <% @figures.each do |figure| %>
      <input type="radio" name="landmark[figure_id]" value="<%= figure.id %>" id="figure_<%= figure.id %>"<% if figure == @landmark.figure %>checked<% end %>><%= figure.name %><br>
    <% end %>
  </p>
  <p>
    <h3>Create New Figure</h3>
    <input type="text" name="figure[name]" id="figure_name">
  </p>
  <input type="submit" value="Edit Landmark">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
