<h1>Edit Figure</h1>

<form action="/figures/<%= @figure.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <p>
    <label for="figure_name">Name of the Figure: </label>
    <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">
  </p>
  <p>
    <h3>Titles</h3>
    <% @titles.each do |title| %>
      <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>" <% if @figure.titles.include?(title) %>checked<% end %>><%= title.name %><br>
    <% end %>
  </p>
  <p>
    <h3>Create New Title:</h3>
    <label for="new_title">Title Name </label>
    <input type="text" name="title[name]" id="new_title">
  </p>
  <p>
    <h3>Landmarks</h3>
    <% @landmarks.each do |landmark| %>
      <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>" <% if @figure.landmarks.include?(landmark) %>checked<% end %>><%= landmark.name %><br>
    <% end %>
  </p>
  <p>
    <h3>Create New Landmark:</h3>
    <label for="new_landmark">Landmark Name </label>
    <input type="text" name="landmark[name]" id="new_landmark">
  </p>
  <p>
    <input type="submit" value="Edit Figure">
  </p>
</form>